{
  "openapi": "3.0.4",
  "info": {
    "title": "AuthTest.Server",
    "version": "1.0"
  },
  "paths": {
    "/api/Auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Credential"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/Credential"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/Credential"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Credential": {
        "required": [
          "Login",
          "Password"
        ],
        "type": "object",
        "properties": {
          "Login": {
            "minLength": 1,
            "type": "string"
          },
          "Password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}